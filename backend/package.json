{
  "name": "lifecommit-backend",
  "version": "1.0.0",
  "description": "LifeCommit Security-Hardened Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "test": "NODE_ENV=test jest --runInBand --forceExit --detectOpenHandles",
    "test:coverage": "NODE_ENV=test jest --runInBand --forceExit --detectOpenHandles --coverage",
    "audit": "npm audit --audit-level=moderate"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "sanitize-html": "^2.11.0",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "middleware/**/*.js",
      "routes/**/*.js",
      "lib/**/*.js",
      "server.js"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 70
      }
    },
    "testTimeout": 30000
  }
}
