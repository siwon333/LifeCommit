# ─── Application ─────────────────────────────────────────────────────────────
NODE_ENV=production
PORT=3000

# ─── Session / Cookie ─────────────────────────────────────────────────────────
SESSION_SECRET=change-me-at-least-32-chars-long!!
COOKIE_SECRET=change-me-cookie-secret-32-chars!

# ─── JWT ──────────────────────────────────────────────────────────────────────
JWT_SECRET=change-me-jwt-secret-at-least-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ─── CORS ─────────────────────────────────────────────────────────────────────
ALLOWED_ORIGINS=https://siwon333.github.io,https://lifecommit.app

# ─── Firebase Admin ───────────────────────────────────────────────────────────
FIREBASE_PROJECT_ID=life-commit-dfa88
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@life-commit-dfa88.iam.gserviceaccount.com
# Base64-encoded private key (never commit the actual key!)
FIREBASE_PRIVATE_KEY_BASE64=

# ─── Rate Limiting ────────────────────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=10

# ─── Audit Logging ────────────────────────────────────────────────────────────
AUDIT_LOG_FILE=logs/audit.log
LOG_LEVEL=info
